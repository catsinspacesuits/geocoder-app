<main>
  <h1>Location Search</h1>
  <!-- devise flash messages -->
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <!-- Button to search coordinates -->
  <%= form_tag(locations_path, method: :get) do %>
    <%= text_field_tag(:q) %>
    <%= hidden_field_tag 'location_search', true %>
    <%= submit_tag("geocode") %>
    <%= @message %>
  <% end %><br>

  <%= @coordinates %>
</main>

